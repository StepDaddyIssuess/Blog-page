<%- include("partials/header") %>
    <h1>Home</h1>
    <p><%= homeStartingContent %></p>

    <% posts.forEach(function(post) { %>
        <h1><%= post.title %></h1>
        <div class="post-content">
            <% if (post.post.length > 100) { %>
                <p><%= post.post.substring(0, 100) %>... <a href="/posts/<%= post.title %>">Read more</a></p>
            <% } else { %>
                <p><%= post.post %></p>
            <% } %>
        </div>
    <% }); %>
<%- include("partials/footer.ejs") %>